<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.segnalazione.SegnalazioneFilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:minHeight="400dp"
        android:elevation="16dp"
        android:weightSum="10"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filtra"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            tools:ignore="InefficientWeight" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/utente"
                android:labelFor="@+id/utente"
                android:layout_marginEnd="8sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/utente"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="VisualLintTextFieldSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/titolo"
                android:labelFor="@+id/titolo"
                android:layout_marginEnd="8dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/titolo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:ignore="VisualLintTextFieldSize" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/tesisti"
                android:labelFor="@+id/tesista"
                android:layout_marginEnd="8sp"
                android:gravity="center" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/chiusa"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="false"
                android:textColor="@color/primaryColor"
                android:layout_weight="2"
                android:textSize="16sp"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/ordina"
                android:labelFor="@+id/ordina"
                android:layout_marginEnd="8sp"
                android:gravity="center" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ordina"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="false"
                android:textColor="@color/primaryColor"
                android:layout_weight="2"
                android:textSize="16sp"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/zxing_button_ok" />

    </LinearLayout>

</FrameLayout>