<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.task.CreaTaskFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <androidx.constraintlayout.utils.widget.MotionLabel
                android:id="@+id/motionLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/task" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nome_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/descrizione"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descrizione_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/data_consegna"
                android:layout_marginBottom="16dp"/>


            <androidx.constraintlayout.utils.widget.MotionLabel
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/materiale" />

            <TextView
                android:id="@+id/materiale_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOME FILE SE C'E', SE NON C'E' DISABILITARE BOTTONE SCARICA"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:labelFor="@id/slider"
                />

                <Button
                    android:id="@+id/carica_materiale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/zxing_possible_result_points"
                    android:text="@string/scarica_materiale" />


            <Button
                android:id="@+id/salva_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salva"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>