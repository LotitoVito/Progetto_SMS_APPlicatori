<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.relatore.GestioneTesiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titoloTesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titolo"
            android:inputType="text"
            android:importantForAutofill="no"
            />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/argomenti_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/argomenti"
            android:inputType="text"
            android:minHeight="48dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/corelatore_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_co_relatore"
            android:inputType="text"
            android:minHeight="48dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tempistiche_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tempistiche"
            android:inputType="text"
            android:minHeight="48dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/esamiMancanti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/numero_esami_mancanti"
            android:inputType="number"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/capacitaRichiesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/capacitaRichiesta"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/media_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/media"
            android:inputType="text"
            android:minHeight="48dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/disponibilita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:padding="8dp"
            android:text="@string/disponibilita" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/aggiungi"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>