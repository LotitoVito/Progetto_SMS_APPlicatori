<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TesiFilterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:minHeight="400dp"
            android:elevation="16dp"
            android:weightSum="10"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filtra"
                android:textColor="@color/primaryColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                tools:ignore="InefficientWeight" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="18sp"
                   android:text="@string/relatore"
                   android:labelFor="@+id/relatore"
                   android:layout_marginEnd="8sp"
                   android:gravity="center" />

               <EditText
                   android:id="@+id/relatore"
                   android:layout_width="match_parent"
                   android:layout_height="48dp"
                   android:importantForAutofill="no"
                   android:inputType="number"
                   tools:ignore="VisualLintTextFieldSize" />

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/argomenti"
                    android:labelFor="@+id/argomento"
                    android:layout_marginEnd="8dp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/argomento"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/tempistiche"
                    android:labelFor="@+id/tempistiche"
                    android:layout_marginEnd="8sp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/tempistiche"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/media"
                    android:labelFor="@+id/media"
                    android:layout_marginEnd="8sp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/media"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/numero_esami_mancanti"
                    android:labelFor="@+id/numeroEsamiMancanti"
                    android:layout_marginEnd="8sp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/numeroEsamiMancanti"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/disponibilita"
                    android:labelFor="@+id/disponibilita"
                    android:layout_marginEnd="8sp"
                    android:gravity="center" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/disponibilita"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:textColor="@color/primaryColor"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    tools:ignore="VisualLintButtonSize" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/ordinaper"
                    android:labelFor="@+id/ordinaper"
                    android:layout_marginEnd="8sp"
                    android:gravity="center" />

                <Spinner
                    android:id="@+id/ordinaper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:minHeight="48dp"
                    android:spinnerMode="dropdown"
                    tools:ignore="LabelFor"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:text="@string/ordina"
                    android:labelFor="@+id/ordina"
                    android:layout_marginEnd="8sp"
                    android:gravity="center" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ordina"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:textColor="@color/primaryColor"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    tools:ignore="VisualLintButtonSize" />

            </LinearLayout>



            <Button
                android:id="@+id/avviaRicerca"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/zxing_button_ok" />

        </LinearLayout>

</FrameLayout>