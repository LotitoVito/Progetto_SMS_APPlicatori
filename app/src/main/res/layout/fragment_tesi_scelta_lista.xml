<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.tesiscelta.TesiSceltaListaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:minHeight="400dp"
        android:elevation="16dp"
        android:weightSum="10"
        tools:ignore="UselessParent">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/richieste"
            android:id="@+id/richieste" />


        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tesisti"
            android:id="@+id/tesisti" />

    </com.google.android.material.tabs.TabLayout>

        <ListView
            android:id="@+id/tesistiList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/generic_item" />

    </LinearLayout>
</FrameLayout>