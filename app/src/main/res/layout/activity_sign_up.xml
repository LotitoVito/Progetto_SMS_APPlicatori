<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".activities.SignUpActivity">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Studentbutton"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="@string/studente"
            app:layout_constraintBottom_toTopOf="@+id/Relatorebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:width="250dp"
            />

        <Button
            android:id="@+id/Relatorebutton"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="@string/relatore"
            app:layout_constraintBottom_toTopOf="@+id/Corelatorebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Studentbutton"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:width="250dp"/>

        <Button
            android:id="@+id/Corelatorebutton"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="@string/co_relatore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Relatorebutton"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:width="250dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>